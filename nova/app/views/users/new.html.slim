= form_for @user, url: signup_path do |f|
  = render 'shared/error_messages', object: f.object
  .field
    = f.label :nickname
    .control
      = f.text_field :nickname, class: 'input'
  .field
    = f.label 'Email (後から変更することはできません)'
    .control
      = f.email_field :email, class: 'input'
  .field
    = f.label 'Password（半角英数字をそれぞれ1種類以上含めてください）'
    .control
      = f.password_field :password, class: 'input'
  .field
    = f.label :password_confirmation
    .control
      = f.password_field :password_confirmation, class: 'input'
  .field
    .control.has-text-right
      = f.submit class: 'button is-primary'
= debug(params) if Rails.env.development?